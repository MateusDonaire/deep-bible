{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",                
    "paths": {
      "@/*": ["*"]                  
    },
    "incremental": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "exclude": ["node_modules", "dist"]
}
